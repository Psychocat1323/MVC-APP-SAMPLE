@model DiaryEntry

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Update Diary Entry</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Update" method="post">
                        <div asp-validation-summary="All" class="text-danger"> </div>
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label text-black"></label>
                            <span asp-validation-for="Title" class="text-danger"></span>
                            <input asp-for="Title" class="form-control" placeholder="Enter a title" />

                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Content" class="form-label text-black"></label>
                            <span asp-validation-for="Content" class="text-danger"></span>
                            <input asp-for="Content" row="5" class="form-control" placeholder="Enter a Content" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Created" class="form-label text-black"></label>
                            <span asp-validation-for="Created" class="text-danger"></span>
                            <input asp-for="Created" class="form-control" type="date" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Confirm Update</button>
                            <a asp-controller="DiaryEntry" asp-action="Index" class="btn btn-danger">Cancel</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}